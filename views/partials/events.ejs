<!-- Add this after the reverse proxies table -->
<div class="container mx-auto p-4 bg-white shadow rounded mt-8">
  <button 
    id="eventsToggle" 
    class="flex justify-between items-center w-full text-2xl font-bold mb-4 bg-gray-100 p-2 rounded"
    onclick="toggleEvents()"
  >
    <span>Recent Events</span>
    <svg id="eventsArrow" class="w-6 h-6 transform transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
    </svg>
  </button>
  
  <div id="eventsContent" class="hidden">
    <div class="flex items-center mb-4">
      <button
        id="updateEvents"
        class="bg-blue-500 text-white px-4 py-2 rounded mr-4"
      >
        Update Events
      </button>
      <label class="flex items-center">
        <input type="checkbox" id="autoUpdate" class="mr-2" />
        Auto-update every 5 seconds
      </label>
    </div>
    <div class="overflow-x-auto">
      <table id="eventsTable" class="w-full table-auto">
        <thead>
          <tr>
            <th class="text-left px-4 py-2">Action</th>
            <th class="text-left px-4 py-2">Details</th>
            <th class="text-left px-4 py-2">Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <!-- Events will be populated here -->
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  function toggleEvents() {
    const content = document.getElementById('eventsContent');
    const arrow = document.getElementById('eventsArrow');
    content.classList.toggle('hidden');
    arrow.classList.toggle('rotate-180');
  }
</script>
<script src="/js/events.js"></script>
